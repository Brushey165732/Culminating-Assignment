<Window x:Class="FireEmblem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FireEmblem"
        mc:Ignorable="d"
        Background="SteelBlue"
        KeyDown="Window_KeyDown"
        MouseDown="Window_MouseDown"
        Title="MainWindow" Height="600" Width="720"
        MaxHeight="600" MinHeight="600" MaxWidth="720" MinWidth="720">
    <Canvas x:Name="canvas">
        <TextBox x:Name="txt_Title" Text="Fire Emblem" HorizontalAlignment="Center" FontSize="30" FontFamily="Times New Roman" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="200" Height="50" Canvas.Left="249" Canvas.Top="155"/>
        <Button x:Name="btn_Start" Content="Press to Start" Canvas.Left="309" Canvas.Top="232" Width="81" Click="btn_Start_Click" />
    </Canvas>
</Window>
